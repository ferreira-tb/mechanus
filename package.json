{
	"name": "mechanus",
	"version": "3.6.5",
	"description": "Simple state management solution",
	"license": "MIT",
	"main": "dist/index.js",
	"type": "module",
	"homepage": "https://github.com/ferreira-tb/mechanus",
	"author": {
		"name": "Andrew Ferreira",
		"email": "andrew.shien2@gmail.com",
		"url": "https://github.com/ferreira-tb"
	},
	"keywords": [
		"state management",
		"node",
		"reactive",
		"typescript"
	],
	"files": [
		"dist/**/*"
	],
	"types": "dist/index.d.ts",
	"lint-staged": {
		"*.{?(c|m)@(j|t)s,css,vue,md,json}": "prettier --write"
	},
	"scripts": {
		"build": "run-s rollup script:minify",
		"deploy": "npm run docs:typedoc",
		"docs:typedoc": "npx typedoc --plugin typedoc-plugin-mdn-links",
		"format": "prettier . --write",
		"prepare": "husky install",
		"rollup": "rollup --config rollup.config.ts --configPlugin typescript={tsconfig:'tsconfig.rollup.json'}",
		"script:minify": "node scripts/minify.mjs",
		"taze": "npx taze -w -f",
		"test": "vitest",
		"test:coverage": "vitest --coverage",
		"test:ui": "vitest --ui --watch --coverage.enabled=true",
		"test:watch": "vitest --watch"
	},
	"devDependencies": {
		"@octokit/core": "^5.0.1",
		"@rollup/plugin-typescript": "^11.1.5",
		"@types/node": "^20.9.0",
		"@vitest/coverage-istanbul": "^0.34.6",
		"@vitest/ui": "^0.34.6",
		"husky": "^8.0.3",
		"lint-staged": "^15.1.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.1.0",
		"rollup": "^4.4.1",
		"taze": "^0.12.0",
		"terser": "^5.24.0",
		"tslib": "^2.6.2",
		"typedoc": "^0.25.3",
		"typedoc-plugin-mdn-links": "^3.1.0",
		"typescript": "^5.2.2",
		"vitest": "^0.34.6"
	}
}

{
  "name": "mechanus",
  "version": "3.7.1",
  "description": "Simple state management solution",
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@8.11.0",
  "author": {
    "name": "Andrew Ferreira",
    "email": "andrew.shien2@gmail.com",
    "url": "https://github.com/ferreira-tb"
  },
  "homepage": "https://tb.dev.br/mechanus/",
  "repository": {
    "type": "git",
    "url": "https://github.com/ferreira-tb/mechanus.git"
  },
  "bugs": {
    "url": "https://github.com/ferreira-tb/mechanus/issues",
    "email": "andrew.shien2@gmail.com"
  },
  "keywords": [
    "state management",
    "node",
    "reactive",
    "typescript"
  ],
  "files": [
    "dist"
  ],
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,css,vue,md,json}": "prettier --write"
  },
  "scripts": {
    "build": "pnpm run rollup",
    "deploy": "run-s docs:build docs:typedoc",
    "deps": "pnpm exec taze -w -f",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:typedoc": "npx typedoc --plugin typedoc-plugin-mdn-links",
    "prepare": "husky install",
    "prettier": "pnpm exec prettier . --write",
    "rollup": "rollup --config rollup.config.js",
    "script:publish": "node --loader ts-node/esm scripts/publish.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui --watch --coverage.enabled=true",
    "test:watch": "vitest --watch"
  },
  "devDependencies": {
    "@octokit/core": "^5.0.1",
    "@rollup/plugin-typescript": "^11.1.5",
    "@tb-dev/eslint-config": "^1.3.10",
    "@types/node": "^20.9.2",
    "@unocss/preset-uno": "^0.57.6",
    "@vitest/coverage-istanbul": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "miho": "^1.7.11",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.1.0",
    "rollup": "^4.5.0",
    "taze": "^0.12.0",
    "terser": "^5.24.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.3",
    "typedoc-plugin-mdn-links": "^3.1.4",
    "typescript": "^5.2.2",
    "unocss": "^0.57.6",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.3",
    "vitepress": "^1.0.0-rc.29",
    "vitest": "^0.34.6",
    "vue": "^3.3.8"
  }
}
